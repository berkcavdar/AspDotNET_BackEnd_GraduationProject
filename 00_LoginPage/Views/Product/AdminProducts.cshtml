@model ICollection<_00_LoginPage.ViewModeels.ProductViewModel>
@{
    ViewBag.Title = "Ürünler";
}

<div class="conatiner">
    <div class="wrap">
        @foreach (var item in Model)
        {
            <div class="box one m-4">
                <h2 class="mt-2">@item.Name</h2>
                <img class="card-img-top mt-1" src="@Url.Content(item.ImageUrl)">
                <div class="container-login100-form-btn m-3">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button type="submit" asp-action="Update" asp-controller="Product" class="login100-form-btn">
                            <a asp-controller="Product" class="login100-form-btn" asp-action="Update" asp-route-id="@item.Id">
                                Değiştir
                            </a>
                        </button>
                    </div>
                </div>
                <div class="container-login100-form-btn m-4">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        @using (Html.BeginForm("Delete", "Product", new { id = item.Id }, FormMethod.Post))
                        {
                            <button type="submit" class="login100-form-btn">
                                Sil
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>