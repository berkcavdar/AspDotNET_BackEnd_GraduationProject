@model _00_LoginPage.Models.InsertModel.Models.CategoryInsertModel
@{
    ViewBag.Title = "Kategori";
}

<!DOCTYPE html>
<html lang="tr">
<head>

</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                @using (Html.BeginForm("Create", "Category", FormMethod.Post))
                {
                    <form class="login100-form validate-form">
                        <span class="login100-form-title p-b-49">
                            Kategori Oluştur
                        </span>
                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <span class="label-input100">Ad</span>
                            <input class="input100" type="text" asp-for="Name" placeholder="Kategori Adı" required>
                            <span class="focus-input100" data-symbol="&#xf1db;"></span>
                        </div>
                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <span class="label-input100">Resim URL</span>
                            <input class="input100" type="url" asp-for="ImageUrl" placeholder="Resim URL" required>
                            <span class="focus-input100" data-symbol="&#xf22c;"></span>
                        </div>
                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button type="submit" asp-action="Create" asp-controller="Category" class="login100-form-btn">
                                    Oluştur
                                </button>
                            </div>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <span class="text-center text-danger">
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (var error in modelState.Errors)
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    }
                                </span>
                            }
                        </div>
                        <div class="flex-col-c p-t-155">
                            <span class="txt1 p-b-17">
                                Kategori Listesine Geri Dönmek İster Misiniz?
                            </span>
                            <a asp-action="Index" asp-controller="Category" class="txt2">
                                Kategoriler
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
    <div id="dropDownSelect1"></div>
</body>
</html>